<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otherpages"
    android:orientation="vertical" >
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dDetTitle"
             style="@style/WhiteFont"
             android:layout_weight="1"
             android:gravity="center"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp"
             android:text="@string/d_donor_details"
             android:textSize="24sp" />
     </TableRow>

     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dname"
             style="@style/WhiteFont"
             android:layout_weight="1"
             android:gravity="left"
             android:paddingLeft="16dp"
             android:paddingBottom="16dp"
             android:paddingTop="16dp"
             android:text="@string/d_name" />
  
         <TextView
             android:id="@+id/dname_value" 
             android:text="Donor Name"
             android:layout_weight="1"
             style="@style/WhiteBoldFont"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
     </TableRow>
     
     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dbloodgroup" 
             android:text="@string/d_bloodgroup"
             android:layout_weight="1" 
             style="@style/WhiteFont"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
  
         <TextView
             android:id="@+id/dbloodgroup_value" 
             android:text="O +ve"
             android:layout_weight="1"
             style="@style/WhiteBoldFont"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
     </TableRow>
     
     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dgender" 
             android:text="@string/d_gender"
             android:layout_weight="1" 
             style="@style/WhiteFont"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
  
         <TextView
             android:id="@+id/dgender_value" 
             android:text="Male"
             android:layout_weight="1"
             style="@style/WhiteBoldFont"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
     </TableRow>
     
     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dage" 
             android:text="@string/d_age"
             android:layout_weight="1" 
             style="@style/WhiteFont"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
  
         <TextView
             android:id="@+id/dage_value" 
             android:text="25"
             android:layout_weight="1"
             style="@style/WhiteBoldFont"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
     </TableRow>

     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dlocality" 
             android:text="@string/d_locality"
             android:layout_weight="1" 
             style="@style/WhiteFont"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
  
         <TextView
             android:id="@+id/dlocality_value" 
             android:text="Bellandur"
             android:layout_weight="1"
             style="@style/WhiteBoldFont"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
     </TableRow>
     
     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dcity" 
             android:text="@string/d_city"
             android:layout_weight="1" 
             style="@style/WhiteFont"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
  
         <TextView
             android:id="@+id/dcity_value" 
             android:text="Bangalore"
             android:layout_weight="1"
             style="@style/WhiteBoldFont"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp" 
             android:gravity="left"/>
     </TableRow>
     
     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" >

         <TextView
             android:id="@+id/dmobile"
             style="@style/WhiteFont"
             android:layout_weight="1"
             android:gravity="left"
             android:paddingBottom="16dp"
             android:paddingLeft="16dp"
             android:paddingTop="16dp"
             android:text="@string/d_mobile_no" />
  
         <TextView
             android:id="@+id/dmobile_value"
             style="@style/WhiteBoldFont"
             android:layout_weight="1"
             android:gravity="left"
             android:paddingBottom="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp"
             android:text="9876543210" />

     </TableRow>
     
</TableLayout>
