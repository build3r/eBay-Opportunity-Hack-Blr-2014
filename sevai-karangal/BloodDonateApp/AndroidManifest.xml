<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sevaikarangal.blooddonationapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <application
        android:name="com.sevaikarangal.blooddonationapp.DonorApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_new"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sevaikarangal.blooddonationapp.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sevaikarangal.blooddonationapp.RequestActivity"
            android:label="@string/title_activity_request" >
        </activity>
        <activity
            android:name="com.sevaikarangal.blooddonationapp.SubscribeActivity"
            android:label="@string/title_activity_subscribe" >
        </activity>
        <activity android:name="com.sevaikarangal.blooddonationapp.EmergencyCase" />
        <activity android:name="com.sevaikarangal.blooddonationapp.RequestActivity2" />
        <activity android:name="com.sevaikarangal.blooddonationapp.DonorList" />
        <activity
            android:name="com.sevaikarangal.blooddonationapp.DonorDetailsActivity"
            android:label="@string/title_activity_donor_details" >
        </activity>
        <activity
            android:name="com.sevaikarangal.blooddonationapp.RequestDetailsActivity"
            android:label="@string/title_activity_request_details" >
        </activity>
        <activity
            android:name="com.sevaikarangal.blooddonationapp.DonorListActivity"
            android:label="@string/title_activity_donor_list" >
        </activity>
        <service android:name=".NotifyService"/>
        <activity
            android:name="com.sevaikarangal.blooddonationapp.RequestListActivity"
            android:label="@string/title_activity_request_list" >
        </activity>
        <activity
            android:name="com.sevaikarangal.blooddonationapp.RequestActivityMyOwn"
            android:label="@string/title_activity_request_list" >
        </activity>
        
        <activity
            android:name="com.sevaikarangal.blooddonationapp.RequestItemActivity"
            android:label="@string/title_activity_request_item" >
        </activity>
    </application>

</manifest>
