<form
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_VIDIYAL_COMMON_NORECORDS"
>
	<headerset>
		<header name="vidiyal_donor_id" type="rowselect" tdwidth="20" />
				
		<header name="Name" type="fieldsearchable" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		<header name="Amount" type="field" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		<header name="Currency" type="field" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		<header name="email" type="fieldsearchable" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		
		<header name="Note" type="field" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		
		<header name="DateOfBirth" type="field" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		
		<header name="DateOfPayment" type="field" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		<header name="enabled" type="published" sortable="true" tdwidth="8%" />
	</headerset>

	<fieldset name="items">
		<field name="vidiyal_item_id" type="selectrow"/>

		<field name="Name" type="text"
						show_link="true"
			url="index.php?option=com_vidiyal&amp;view=donor&amp;id=[ITEM:ID]"/>
		
		
		<field name="Amount" type="text"/>
		
		<field name="Currency" type="text"/>
		 
		<field name="EMail" type="text"/>
		<field name="Note" type="text"/>
		<field name="DateOfBirth" type="text"/>
		<field name="DateOfPayment" type="text"/>
		

		<field name="enabled" type="published"/>
	</fieldset>
</form>
