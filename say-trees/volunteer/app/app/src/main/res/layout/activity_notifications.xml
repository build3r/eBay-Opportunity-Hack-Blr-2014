<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.bigo.saytrees.activity.NotificationsActivity">


    <ImageView
        android:id="@+id/calendar"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_event_black_48dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_below="@+id/calendar"
        android:layout_centerHorizontal="true"
        android:text="12th December 2014, 11:00 AM"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_below="@+id/date"
        android:layout_height="wrap_content"
        android:layout_gravity="top"

        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:text="Event Name"
            android:textColor="@color/background_color"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="India"
            android:layout_marginBottom="10dp"
            android:textColor="@color/background_color"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:text="Location"
            android:textColor="@color/background_color"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/location_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="India"
            android:layout_marginBottom="10dp"
            android:textColor="@color/background_color"
            android:textSize="18sp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:text="Organizer"
            android:textColor="@color/background_color"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/organizer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="India"
            android:textColor="@color/background_color"
            android:textSize="18sp"
            android:textStyle="italic" />




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/details"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="JOIN"
            android:layout_margin="10dp"
            android:background="@color/saytrees_green"
            android:textColor="@color/gold"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="DECLINE"
            android:layout_margin="10dp"
            android:textColor="@color/gold"
            android:background="@color/red"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>
